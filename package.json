{
  "name": "uplink",
  "version": "1.0.0",
  "description": "RabbitMQ AMQP communication network for internal communication.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SVKruik-Organization/Uplink.git"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "sudo bash scripts/start-macos.sh",
